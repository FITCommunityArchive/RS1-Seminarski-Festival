@model FestivalWebApplication.ViewModels.Sponsor.NewSponsorVM;
@{
    ViewData["Title"] = "New";
}

<form action="SaveNew" enctype="multipart/form-data" method="post">
    
    <fieldset>
        <legend class="w-auto">Company</legend>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="Name">Company name</label>
            <div class="col-sm-5">
                <input asp-for="CompanyName" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="Image">Image</label>
            <div class="col-sm-5">
                <div class="custom-file input-group">
                    <input asp-for="Image" class="custom-file-input" />
                    <label class="custom-file-label" for="Image">Choose file</label>
                </div>
            </div>
        </div>
    </fieldset> 

    <fieldset>
        <legend class="w-auto">Contact person</legend>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="ManagerName">Name</label>
            <div class="col-sm-5">
                <input asp-for="ContactPersonName" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="ManagerPhoneNumber">Phone number</label>
            <div class="col-sm-5">
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="ManagerEmail">Email</label>
            <div class="col-sm-5">
                <input asp-for="Address" class="form-control" />
            </div>
        </div>

    </fieldset>
 
    <input type="submit" value="Add new sponsor" class="btn btn-lg btn-secondary"/>
</form>

<script>
            $('#Image').on('change',function(){
                //get the file name
                var fileName = $("#Image").val();
                //replace the "Choose a file" label
                $(this).next('.custom-file-label').html(fileName);
            })
</script>