@using FestivalWebApplication.ViewModels.ShopItem;
@model List<FestivalWebApplication.ViewModels.ShopItem.ShopItemListVM>
@{
    ViewData["Title"] = "List";
}

<h1>Shop Items</h1>
<div style="float:right; margin-bottom:10px">
    <a asp-controller="ShopItem" asp-action="New" class="btn btn-success btn-lg active" role="button" aria-pressed="true"><i class="fa fa-plus"></i></a>
</div>
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th colspan="1">#</th>
            <th colspan="4">Name</th>
            <th colspan="1">Price</th>
            <th colspan="1">Quantity</th>
            <th colspan="3">Description</th>
            <th colspan="1"></th>
            <th colspan="1"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (ShopItemListVM x in Model)
        {
            <tr>
                <td colspan="1">@x.ID</td>
                <td colspan="4">@x.Name</td>
                <td colspan="1">@x.Price</td>
                <td colspan="1">@x.Quantity</td>
                <td colspan="3">@x.Description</td>
                <td colspan="1"><a asp-controller="ShopItem" asp-action="Edit" asp-route-id="@x.ID" class="btn btn-secondary active" role="button" aria-pressed="true"><i class="fa fa-edit"></i></a></td>
                <td colspan="1"><a asp-controller="ShopItem" asp-action="Delete" asp-route-id="@x.ID" class="btn btn-danger" role="button" aria-pressed="true"> <i class="fa fa-trash"></i> </a></td>
            </tr>
        }
    </tbody>
</table>
