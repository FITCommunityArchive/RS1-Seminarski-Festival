@using FestivalWebApplication.ViewModels.TransferService;
@model List<FestivalWebApplication.ViewModels.TransferService.ListTransferServiceVM>
@{
    ViewData["Title"] = "Index";
}

<h1>List</h1>
<div style="float:right;">
    <a asp-controller="TransferService" asp-action="New" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">+</a>
</div>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Transfer vehicle</th>
            <th>Available seats</th>
            <th>Date</th>
            <th>Modify</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ListTransferServiceVM x in Model)
        {
            <tr>
                <td>@x.Id</td>
                <td>@x.VehicleName</td>
                <td>@x.AvailableSeats</td>
                <td>@x.Date</td>
                <td><a asp-controller="TransferService" asp-action="Update" asp-route-id="@x.Id" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true"> U </a></td>
                <td><a asp-controller="TransferService" asp-action="Delete" asp-route-id="@x.Id" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true"> X </a></td>
            </tr>
        }
    </tbody>
</table>

