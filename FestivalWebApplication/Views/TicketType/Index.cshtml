@using FestivalWebApplication.ViewModels.TicketType;
@model List<FestivalWebApplication.ViewModels.TicketType.TicketTypeVM>
@{
    ViewData["Title"] = "Index";
}

<h1>List</h1>
<div style="float:right;">
    <a asp-controller="TicketType" asp-action="New" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">+</a>
</div>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Ticket</th>
            <th>Price</th>
            <th>Modify</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (TicketTypeVM x in Model)
        {
        <tr>
            <td>@x.Id</td>
            <td>@x.Name</td>
            <td>@x.Price $</td>
            <td><a asp-controller="TicketType" asp-action="Update" asp-route-id="@x.Id" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true"> U </a></td>
            <td><a asp-controller="TicketType" asp-action="Delete" asp-route-id="@x.Id"class="btn btn-secondary btn-lg active" role="button" aria-pressed="true"> X </a></td>
        </tr>
        }
    </tbody>
</table>

