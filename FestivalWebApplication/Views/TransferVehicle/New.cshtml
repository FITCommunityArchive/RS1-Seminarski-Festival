@model FestivalWebApplication.ViewModels.TransferVehicle.TransferVehicleVM;
@{
    ViewData["Title"] = "New";
}

<form asp-action="SaveNew" enctype="multipart/form-data" method="post">
    <fieldset>
        <legend class="w-auto">Transfer Vehicle</legend>
        <input style="display: none" asp-for="Id" />
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="Name">Vehicle name</label>
            <div class="col-sm-5">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="RegistrationNumber">Registration number</label>
            <div class="col-sm-2">
                <input asp-for="RegistrationNumber" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="Capacity">Vehicle capacity</label>
            <div class="col-sm-2">
                <textarea asp-for="Capacity" class="form-control" ></textarea>
            </div>
        </div>
    </fieldset>



    <input type="submit" value="Add new vehicle" class="btn btn-lg btn-secondary" />

</form>
