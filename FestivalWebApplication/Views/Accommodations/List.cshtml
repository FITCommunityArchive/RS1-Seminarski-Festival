@using FestivalWebApplication.ViewModels.Accommodation;
@model List<FestivalWebApplication.ViewModels.Accommodation.AccommodationListVM>
@{
    ViewData["Title"] = "List";
}

<h1>List</h1>
<div style="float:right;">
    <a asp-controller="Accommodations" asp-action="New" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">+</a>
</div>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Distance</th>
            <th>Description</th>
            <th>Modify</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (AccommodationListVM x in Model)
        {
            <tr>
                <td>@x.ID</td>
                <td>@x.Name</td>
                <td>@x.PhoneNumber</td>
                <td>@x.Distance</td>
                <td>@x.Description</td>
                <td><a asp-controller="Accommodations" asp-action="Edit" asp-route-id="@x.ID" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true"> U </a></td>
                <td><a asp-controller="Accommodations" asp-action="Delete" asp-route-id="@x.ID" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true"> X </a></td>
            </tr>
        }
    </tbody>
</table>
