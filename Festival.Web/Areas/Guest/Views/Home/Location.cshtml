
@{
    ViewData["Title"] = "Location";
    Layout = "~/Areas/Guest/Views/Shared/_UserLayout.cshtml";
}
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.6.0/dist/leaflet.css"
      integrity="sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ=="
      crossorigin="" />
<script src="https://unpkg.com/leaflet@1.6.0/dist/leaflet.js"
        integrity="sha512-gZwIG9x3wUXg2hdXF6+rVkLF/0Vi9U8D2Ntg4Ga5I5BZpVkVxlJWbSQtXPSiUTtC0TjtGOmxa1AJPuV0CPthew=="
        crossorigin=""></script>
<style>


    .leaflet-interactive {
        stroke: #e91e63;
        fill: #e91e63;
    }
</style>
<div style="width:100%; height:400px" id="map"></div>


<script>
    var map = L.map('map', { center: [43.73458, 18.56689], zoom: 10, maxZoom: 13 });

    L.tileLayer('http://{s}.tile.osm.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="http://osm.org/copyright">OpenStreetMap</a> contributors',
        id: "mapbox/satellite-v9"
    }).addTo(map);


    L.circleMarker([43.73458, 18.56689], { radius: 50 }).addTo(map);

    var popup = L.popup()
        .setLatLng([43.73458, 18.56689])
        .setContent('<p>Jahorina Olympic Mountain</p>')
        .openOn(map);

</script>
