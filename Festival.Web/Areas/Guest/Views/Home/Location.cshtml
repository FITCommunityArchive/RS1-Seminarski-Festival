        crossorigin=""></script>
<style>
    .leaflet-interactive{
        stroke: #e91e63;
        fill:#e91e63;

    }
</style>
<div style="width:100%; height:400px" id="map"></div>


<script>
    var map = L.map('map', { center: [-13.4, 48.275], zoom: 10, maxZoom: 13 });

    L.tileLayer('http://{s}.tile.osm.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="http://osm.org/copyright">OpenStreetMap</a> contributors',
        id: "mapbox/satellite-v9"
    }).addTo(map);

    
    L.circleMarker([-13.4, 48.275], { radius: 50 }).addTo(map);

    var popup = L.popup()
    .setLatLng([-13.4, 48.275])
    .setContent('<p>Stade D\'Ambodivoanio (Nosy-Be)</p>')
    .openOn(map);

</script>