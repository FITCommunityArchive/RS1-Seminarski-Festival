@using Festival.Web.Areas.Admin.ViewModels.TransferReservation;
@model List<Festival.Web.Areas.Admin.ViewModels.TransferReservation.TransferReservationListVM>
@{
    ViewData["Title"] = "Transfer Reservations";
}

<h1>Transfer Reservations</h1>
<div style="float:right; margin-bottom:10px;">
    <a asp-controller="TransferReservation" asp-action="New" class="btn btn-success btn-lg active addnew" role="button" aria-pressed="true">Add new <i class="fa fa-plus"></i></a>
</div>
<table class="table  table-striped table-hover text-center justify-content-center">
    <thead class="thead-dark zaglavlje">
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Email</th>
            <th>Date of Transfer</th>
            <th>Meeting Point</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (TransferReservationListVM x in Model)
        {
            <tr>
                <td>@x.ID</td>
                <td>@x.FullName</td>
                <td>@x.Email</td>
                <td>@x.Date</td>
                <td>@x.MeetingPoint</td>
                <td>
                    <div class="btn-group">
                        <a style="margin-right:5px;" asp-controller="TransferReservation" asp-action="Detail" asp-route-id="@x.ID" class="btn btn-info active btn-sm" role="button" aria-pressed="true">
                            <i class="fa fa-info mr-1"></i>
                            Detail
                        </a>
                        <a style="margin-right:5px;" asp-controller="TransferReservation" asp-action="Edit" asp-route-id="@x.ID" class="btn btn-secondary active btn-sm" role="button" aria-pressed="true">
                            <i class="fa fa-edit"></i>
                            Edit
                        </a>
                        <a asp-controller="TransferReservation" asp-action="Delete" asp-route-id="@x.ID" class="btn btn-danger btn-sm" role="button" aria-pressed="true">
                            <i class="fa fa-trash"></i>
                            Delete
                        </a>
                    </div>
                </td>
            </tr>

        }
    </tbody>
</table>
