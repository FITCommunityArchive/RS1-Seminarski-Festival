<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Festival</title>
    <link rel="icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
</head>

<body>
    <div class="wrapper">
        <nav id="sidebar" style="overflow-y:scroll">
            <ul class="list-unstyled components">
                <li class="item">
                    <a asp-controller="Home" asp-action="Index" class="linkItem">
                        <i class="fa fa-home menuItem"></i>
                        <span class="text">Home</span>
                    </a>

                </li>

                <hr class="alert-light" />
                <li class="item">
                    <a asp-controller="Performance" asp-action="Index" class="linkItem">
                        <i class="fa fa-music menuItem"></i>
                        <span class="text">Performance</span>
                    </a>

                </li>
                <li class="item">
                    <a asp-controller="Performer" asp-action="Index" class="linkItem">
                        <i class="fa fa-microphone menuItem"></i>
                        <span class="text">Performer</span>
                    </a>

                </li>
                <li class="item">
                    <a asp-controller="Stage" asp-action="Index" class="linkItem">
                        <i class="fa fa-music menuItem"></i>
                        <span class="text">Stage</span>
                    </a>

                </li>
                <li class="item">
                    <a asp-controller="Sponsor" asp-action="Index" class="linkItem">
                        <i class="fa fa-briefcase menuItem"></i>
                        <span class="text">Sponsor</span>
                    </a>
                </li>

                <hr class="alert-light" />

                <li class="item">
                    <a asp-controller="Accommodations" asp-action="Index" class="linkItem">
                        <i class="fa fa-hotel menuItem"></i>
                        <span class="text">Accommodations</span>
                    </a>
                </li>

                <li class="item">
                    <a asp-controller="Attendee" asp-action="Index" class="linkItem">
                        <i class="fa fa-user-md menuItem menuItem"></i>
                        <span class="text">Attendee</span>
                    </a>
                </li>

                <hr class="alert-light" />

                <li class="item">
                    <a asp-controller="Ticket" asp-action="Index" class="linkItem">
                        <i class="fa fa-ticket menuItem"></i>
                        <span class="text">Tickets</span>
                    </a>
                </li>
                <li>


                <li class="item">
                    <a asp-controller="TicketType" asp-action="Index" class="linkItem">
                        <i class="fa fa-object-group menuItem"></i>
                        <span class="text">Ticket Type</span>
                    </a>
                </li>
                <li>

                <li class="item">
                    <a asp-controller="TicketVoucher" asp-action="Index" class="linkItem">
                        <i class="fa fa-newspaper-o menuItem"></i>
                        <span class="text">Ticket Voucher</span>
                    </a>
                </li>
                <li>

                    <hr class="alert-light" />


                <li class="item">

                    <a asp-controller="Purchase" asp-action="Index" class="linkItem">
                        <i class="fa fa-shopping-cart menuItem"></i>
                        <span class="text">Purchases</span>
                    </a>
                </li>
                <li class="item">

                    <a asp-controller="ShopItem" asp-action="Index" class="linkItem">
                        <i class="fa fa-shopping-bag menuItem"></i>
                        <span class="text">Shop Items</span>
                    </a>
                </li>
                <li class="item">

                    <a asp-controller="PurchaseVoucher" asp-action="Index" class="linkItem">
                        <i class="fa fa-caret-square-o-right menuItem"></i>
                        <span class="text">Purchase Vouchers</span>
                    </a>
                </li>
                <hr class="alert-light" />
                <li class="item">

                    <a asp-controller="TransferVehicle" asp-action="Index" class="linkItem">
                        <i class="fa fa-car menuItem"></i>
                        <span class="text">Transfer Vehicles</span>
                    </a>
                </li>
                <li class="item">

                    <a asp-controller="TransferService" asp-action="Index" class="linkItem">
                        <i class="fa fa-compass menuItem"></i>
                        <span class="text">Transfer Services</span>
                    </a>
                </li>
                <li class="item">

                    <a asp-controller="TransferReservation" asp-action="Index" class="linkItem">
                        <i class="fa fa-podcast menuItem"></i>
                        <span class="text">Transfer Reservations</span>
                    </a>
                </li>
                <hr class="alert-light" />
            </ul>


        </nav>

        <div id="content">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">

                    <button type="button" id="sidebarCollapse" class="btn btn-info">
                        <i class="fa     fa-align-left"></i>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fas fa-align-justify"></i>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item active" id="logoutButton">
                                <a class="nav-link btn-success" asp-controller="Home" asp-action="Logout">Logout<i class="fa fa-user" id="logout"></i></a>
                            </li>

                        </ul>
                    </div>
                </div>
            </nav>

            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>


    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('.text').toggleClass('visible');
                $('#sidebar').toggleClass('active');
                $('.menuItem').toggleClass('center');
                $('#content').toggleClass('margin');

            });
        });</script>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
