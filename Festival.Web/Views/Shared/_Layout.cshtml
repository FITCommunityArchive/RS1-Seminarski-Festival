<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FestivalWebApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://use.fontawesome.com/d22e0db76a.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
</head>

<body>
    <div class="wrapper">
        <nav id="sidebar">
            <ul class="list-unstyled components">
                <li class="active item">
                    <a asp-controller="Home" asp-action="Index" class="linkItem">
                        <i class="fa fa-home menuItem"></i>
                        <span class="text">Home</span>
                    </a>

                </li>
                <li class="item">
                    <a href="#performsubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle linkItem">
                        <i class="fa fa-music menuItem"></i>
                        <span class="text">Perform</span>
                    </a>
                    <ul class="collapse list-unstyled" id="performsubmenu">
                        <li>
                            <a asp-controller="Performance" asp-action="Index">
                                Live Set
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Performer" asp-action="Index">Perfomer</a>
                        </li>
                        <li>
                            <a asp-controller="Stage" asp-action="Index">Stage</a>
                        </li>
                    </ul>
                </li>
                <li class="item">
                    <a asp-controller="Accommodations" asp-action="Index" class="linkItem">
                        <i class="fa fa-hotel menuItem"></i>
                        <span class="text">Accommodations</span>
                    </a>
                </li>
                <li class="item">
                    <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle linkItem">
                        <i class="fa fa-car menuItem"></i>
                        <span class="text">Transfer</span>
                    </a>
                    <ul class="collapse list-unstyled" id="pageSubmenu">
                        <li>
                            <a asp-controller="TransferService" asp-action="Index">Transfer Service</a>
                        </li>
                        <li>
                            <a asp-controller="TransferVehicle" asp-action="Index">Transfer Vehicle</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a asp-controller="Sponsor" asp-action="Index">
                        <i class="fa fa-briefcase menuItem"></i>
                        <span class="text">Sponsor</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="TicketType" asp-action="Index">
                        <i class="fa fa-ticket menuItem"></i>
                        <span class="text">Ticket Type</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="ShopItem" asp-action="Index">
                        <i class="fa fa-shopping-bag menuItem"></i>
                        <span class="text">Shop Item</span>
                    </a>
                </li>
            </ul>


        </nav>

        <div id="content">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">

                    <button type="button" id="sidebarCollapse" class="btn btn-info">
                        <i class="fa     fa-align-left"></i>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fas fa-align-justify"></i>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item active" id="logoutButton">
                                <a class="nav-link btn-success" asp-controller="Home" asp-action="Logout">Logout<i class="fa fa-user" id="logout"></i></a>
                            </li>

                        </ul>
                    </div>
                </div>
            </nav>

            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>


    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('.text').toggleClass('visible');
                $('#sidebar').toggleClass('active');
                $('.menuItem').toggleClass('center');
                $('#content').toggleClass('margin');

            });
        });</script>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
