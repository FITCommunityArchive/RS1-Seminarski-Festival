@model FestivalWebApplication.ViewModels.Sponsor.EditSponsorVM;
@{
    ViewData["Title"] = "New";
}

    <form asp-action="Save" enctype="multipart/form-data" method="post">
        <input asp-for="Id" hidden />
        <fieldset>
            <legend class="w-auto">Company</legend>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="Name">Company name</label>
                <div class="col-sm-5">
                    <input asp-for="CompanyName" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="Image">Image</label>
                <div class="col-sm-5">
                    <div class="custom-file input-group">
                        <input asp-for="Image" class="custom-file-input" />
                        <label class="custom-file-label" for="Image">Choose file</label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2"></div>
                <img src="@Url.Content(Model.ImagePath)" id="imgPreview" style="max-width:200px; height:auto" />
            </div>
        </fieldset>

        <fieldset>
            <legend class="w-auto">Contact person</legend>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="ManagerName">Name</label>
                <div class="col-sm-5">
                    <input asp-for="ContactPersonName" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="ManagerPhoneNumber">Phone number</label>
                <div class="col-sm-5">
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="ManagerEmail">Email</label>
                <div class="col-sm-5">
                    <input asp-for="Address" class="form-control" />
                </div>
            </div>

        </fieldset>

        <input type="submit" value="Save changes" class="btn btn-lg btn-secondary" />
    </form>

<script>
            $('#Image').on('change',function(){
                //get the file name
                var fileName = $("#Image").val();
                //replace the "Choose a file" label
                $(this).next('.custom-file-label').html(fileName);
            })
</script>