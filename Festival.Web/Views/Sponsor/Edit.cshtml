@model FestivalWebApplication.ViewModels.Sponsor.EditSponsorVM;
@{
    ViewData["Title"] = Model.CompanyName;
}


<style>








    .container {
        padding: 0 !important;
    }

    main.pb-3 {
        padding-bottom: 0 !important;
    }
</style>

<div class="formDiv" style="background-color:#e2e2e2;">
    <form class="formMy" style="border:2px dotted #fafafa; background-color:#fafafa" asp-action="Save" enctype="multipart/form-data" method="post">
        <fieldset>
            <input asp-for="Id" hidden />
            <div class="form-group newRow">
                <label for="Name" class="newLabel">Company Name :</label>
                <div>
                    <input asp-for="CompanyName" class="form-control" />
                </div>
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>

            <div class="form-group newRow">
                <label for="Address" class="newLabel">Address :</label>
                <div>
                    <input asp-for="Address" class="form-control" />
                </div>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="col-5 newRow" style="float:left;padding-left:0px;">
                    <label class="newLabel" for="PhoneNumber">Phone number :</label>
                    <div>
                        <input asp-for="PhoneNumber" class="form-control" />
                    </div>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="col-7 newRow" style="float:right;padding-right:0px;">
                    <label class="newLabel" for="ContactPersonName">Contact Name : </label>
                    <div>
                        <input asp-for="ContactPersonName" class="form-control" />
                    </div>
                    <span asp-validation-for="ContactPersonName" class="text-danger"></span>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="form-group newRow">
                <label class="newLabel" for="Image">Image :</label>
                <div>
                    <input type="file" asp-for="Image" />
                </div>
            </div>
        </fieldset>

        <input type="submit" value="Save new" class="btn btn-lg btn-secondary submit" />

    </form>
</div>
