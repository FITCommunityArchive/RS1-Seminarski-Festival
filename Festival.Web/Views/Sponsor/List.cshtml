@using FestivalWebApplication.ViewModels.Sponsor;
@model List<FestivalWebApplication.ViewModels.Sponsor.SponsorsListVM>
@{
    ViewData["Title"] = "Sponsors";
}

<h1>Sponsor</h1>
<div style="float:right; margin-bottom:10px;">
    <a asp-controller="Sponsor" asp-action="New" class="btn btn-success btn-lg active" role="button" aria-pressed="true"><i class="fa fa-plus"></i></a>
</div>
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Company name</th>
            <th>Contact person</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (SponsorsListVM x in Model)
        {
            <tr>
                <td>@x.Number</td>
                <td>@x.CompanyName</td>
                <td>@x.ContactPersonName</td>
                <td>
                    <a style="margin-right:5px;" asp-controller="Sponsor" asp-action="Edit" asp-route-id="@x.SponsorID" class="btn btn-secondary active" role="button" aria-pressed="true">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a asp-controller="Sponsor" asp-action="Delete" asp-route-id="@x.SponsorID" class="btn btn-danger" role="button" aria-pressed="true">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>

        }
    </tbody>
</table>
