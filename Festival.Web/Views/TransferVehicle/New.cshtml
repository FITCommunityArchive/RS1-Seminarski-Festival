@model FestivalWebApplication.ViewModels.TransferVehicle.TransferVehicleVM;
@{
    if (Model.Id != 0)
    {
        ViewData["Title"] = "Edit";
    }
    else
    {
        ViewData["Title"] = "New";
    }
}

<form asp-action="Save" enctype="multipart/form-data" method="post">
    <fieldset>
        <legend class="w-auto">Transfer Vehicle</legend>
        <input style="display: none" asp-for="Id" />
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="Name">Vehicle name</label>
            <div class="col-sm-5">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="RegistrationNumber">Registration number</label>
            <div class="col-sm-2">
                <input asp-for="RegistrationNumber" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="Capacity">Vehicle capacity</label>
            <div class="col-sm-2">
                <input type="number" asp-for="Capacity" class="form-control">
            </div>
        </div>
    </fieldset>



    <input type="submit" value="Save" class="btn btn-lg btn-secondary submit" />

</form>
