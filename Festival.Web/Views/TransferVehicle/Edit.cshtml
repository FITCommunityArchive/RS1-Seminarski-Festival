@model FestivalWebApplication.ViewModels.TransferVehicle.EditTransferVehicleVM;
@{
    ViewData["Title"] = "Edit";
}


<style>







    .container {
        padding: 0 !important;
    }

    main.pb-3 {
        padding-bottom: 0 !important;
    }
</style>

<div class="formDiv" style="background-color:#e2e2e2;">
    <form class="formMy" style="border:2px dotted #fafafa; background-color:#fafafa" asp-action="Save" enctype="multipart/form-data" method="post">
        <fieldset>
            <input asp-for="ID" hidden />
            <div class="form-group newRow">
                <label for="Name" class="newLabel">Name :</label>
                <div>
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="col-7 newRow" style="float:left;padding-left:0px;">
                    <label class="newLabel" for="RegistrationNumber">Registration Number :</label>
                    <div>
                        <input asp-for="RegistrationNumber" class="form-control" />
                    </div>
                    <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                </div>
                <div class="col-5 newRow" style="float:right;padding-right:0px;">
                    <label class="newLabel" for="Capacity">Capacity : </label>
                    <div>
                        <input asp-for="Capacity" class="form-control" />
                    </div>
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="form-group newRow">
                <label for="Driver" class="newLabel">Driver :</label>
                <div>
                    <input asp-for="Driver" class="form-control" />
                </div>
                <span asp-validation-for="Driver" class="text-danger"></span>
            </div>
            <div class="form-group newRow">
                <label class="newLabel" for="Picture">Picture :</label>
                <div>
                    <input type="file" asp-for="Picture" />
                </div>
            </div>
        </fieldset>

        <input type="submit" value="Save changes" class="btn btn-lg btn-secondary submit" />

    </form>
</div>
