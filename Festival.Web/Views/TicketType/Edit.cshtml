@model FestivalWebApplication.ViewModels.TicketType.EditTicketTypeVM;
@{
    ViewData["Title"] = Model.Name;
}

<style>



    .container {
        padding: 0 !important;
    }

    main.pb-3 {
        padding-bottom: 0 !important;
    }
</style>

<div class="formDiv" style="background-color:#e2e2e2;">
    <form class="formMy" style="border:2px dotted #fafafa; background-color:#fafafa" asp-controller="TicketType" asp-action="Save" method="post">
        <fieldset>
            <input asp-for="Id" hidden />
            <div class="form-group newRow">
                <label for="Name" class="newLabel">Name :</label>
                <div>
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group newRow">
                <label for="Description" class="newLabel">Description :</label>
                <div>
                    <input asp-for="Description" class="form-control" />
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group newRow">
                <label class="newLabel" for="Price">Price (KM) :</label>
                <div>
                    <input asp-for="Price" class="form-control col-4" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </fieldset>

        <input type="submit" value="Save changes" class="btn btn-lg btn-secondary submit" />

    </form>
</div>
