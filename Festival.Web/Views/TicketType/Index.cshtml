@using FestivalWebApplication.ViewModels.TicketType;
@model List<FestivalWebApplication.ViewModels.TicketType.TicketTypeVM>;
@{
    ViewData["Title"] = "Ticket Types";
}

<h1>TicketType</h1>
<div style="float:right; margin-bottom:10px;">
    <a asp-controller="TicketType" asp-action="New" class="btn btn-success btn-lg active" role="button" aria-pressed="true"><i class="fa fa-plus"></i></a>
</div>
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Ticket</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (TicketTypeVM x in Model)
        {
            <tr>
                <td>@x.Id</td>
                <td>@x.Name</td>
                <td>@x.Price $</td>
                <td>
                    <a style="margin-right:5px;" asp-controller="TicketType" asp-action="Edit" asp-route-id="@x.Id" class="btn btn-secondary active" role="button" aria-pressed="true">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a asp-controller="Sponsor" asp-action="TicketType" asp-route-id="@x.Id" class="btn btn-danger" role="button" aria-pressed="true">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
