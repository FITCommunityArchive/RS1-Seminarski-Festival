@using Festival.Web.ViewModels.TicketType;
@model List<TicketsVM>
@{
    ViewData["Title"] = "Tickets";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<!-- Pricing Table Section Start -->
<section id="pricing" class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="section-title wow fadeInUp animated" data-wow-delay="0s" style="visibility: visible;-webkit-animation-delay: 0s; -moz-animation-delay: 0s; animation-delay: 0s;">Take a look at Our Pricing</h2>
                <p class="section-subcontent wow fadeInUp animated" data-wow-delay="0.2s" style="visibility: visible;-webkit-animation-delay: 0.2s; -moz-animation-delay: 0.2s; animation-delay: 0.2s;">Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. A <br> enean massa. Cum sociis natoque penatibus et magnis dis parturient montes.</p>
            </div>
            @foreach (var x in Model)
            {
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="pricing-table wow fadeInLeft animated" data-wow-delay="0.3s" style="visibility: visible;-webkit-animation-delay: 0.3s; -moz-animation-delay: 0.3s; animation-delay: 0.3s;">
                        <div class="table-icon">
                            <i class="icon-user"></i>
                        </div>
                        <h3>BASIC</h3>
                        <ul class="plan-info">
                            <li><i class="icon-check"></i> Access to Booth</li>
                            <li><i class="icon-minus"></i> Conference Tickets</li>
                            <li><i class="icon-minus"></i> Printed Materials</li>
                        </ul>
                        <div class="price">
                            <h4>$0.00</h4>
                        </div>
                        <div class="button-area">
                            <a href="http://demo.graygrids.com/themes/impression/pricing.html#" class="btn btn-common">Buy Now</a>
                        </div>
                    </div>
                </div>
            }

            <div class="col-md-4 col-sm-4 col-xs-12">
                <div class="pricing-table pricing-active wow fadeInDown animated" data-wow-delay="0.3s" style="visibility: visible;-webkit-animation-delay: 0.3s; -moz-animation-delay: 0.3s; animation-delay: 0.3s;">
                    <div class="table-icon">
                        <i class="icon-plane"></i>
                    </div>
                    <h3>STANDARD</h3>
                    <ul class="plan-info">
                        <li><i class="icon-check"></i> Access to Booth</li>
                        <li><i class="icon-check"></i> Conference Tickets</li>
                        <li><i class="icon-minus"></i> Printed Materials</li>
                    </ul>
                    <div class="price">
                        <h4>$99</h4>
                    </div>
                    <div class="button-area">
                        <a href="http://demo.graygrids.com/themes/impression/pricing.html#" class="btn btn-common">Buy Now</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-4 col-xs-12">
                <div class="pricing-table wow fadeInRight animated" data-wow-delay="0.3s" style="visibility: visible;-webkit-animation-delay: 0.3s; -moz-animation-delay: 0.3s; animation-delay: 0.3s;">
                    <div class="table-icon">
                        <i class="icon-lock"></i>
                    </div>
                    <h3>PREMIUM</h3>
                    <ul class="plan-info">
                        <li><i class="icon-check"></i> Access to Booth</li>
                        <li><i class="icon-check"></i> Conference Tickets</li>
                        <li><i class="icon-check"></i> Printed Materials</li>
                    </ul>
                    <div class="price">
                        <h4>$149</h4>
                    </div>
                    <div class="button-area">
                        <a href="http://demo.graygrids.com/themes/impression/pricing.html#" class="btn btn-common">Buy Now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Pricing Table Section End -->