@using FestivalWebApplication.ViewModels.ShopItem;
@model List<FestivalWebApplication.ViewModels.ShopItem.ShopItemListVM>
@{
    ViewData["Title"] = "Shop Items";
}


<h1>Shop Items</h1>
<div style="float:right; margin-bottom:10px;">
    <a asp-controller="ShopItem" asp-action="New" class="btn btn-success btn-lg active addnew" role="button" aria-pressed="true">Add New   <i class="fa fa-plus"></i></a>
</div>
<table class="table table-striped table-hover">
    <thead class="thead-dark zaglavlje">
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ShopItemListVM x in Model)
        {
            <tr>
                <td>@x.ID</td>
                <td>@x.Name</td>
                <td>@x.Description</td>
                <td>@x.Quantity</td>
                <td>@x.Price KM</td>
                <td>
                    <a style="margin-right:5px;" asp-controller="ShopItem" asp-action="Detail" asp-route-id="@x.ID" class="btn btn-info active" role="button" aria-pressed="true">
                        <i class="fa fa-info mr-1"></i>
                        Detail
                    </a>
                    <a style="margin-right:5px;" asp-controller="ShopItem" asp-action="Edit" asp-route-id="@x.ID" class="btn btn-secondary active" role="button" aria-pressed="true">
                        <i class="fa fa-edit"></i>
                        Edit
                    </a>
                    <a asp-controller="ShopItem" asp-action="Delete" asp-route-id="@x.ID" class="btn btn-danger" role="button" aria-pressed="true">
                        <i class="fa fa-trash"></i>
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
