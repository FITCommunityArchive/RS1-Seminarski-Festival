@using FestivalWebApplication.ViewModels.ShopItem;
@model List<FestivalWebApplication.ViewModels.ShopItem.ShopItemListVM>
@{
    ViewData["Title"] = "List";
}

<h1>Shop Items</h1>
<div style="float:right; margin-bottom:10px">
    <a asp-controller="ShopItem" asp-action="New" class="btn btn-success btn-lg active" role="button" aria-pressed="true"><i class="fa fa-plus"></i></a>
</div>
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ShopItemListVM x in Model)
        {
            <tr>
                <td>@x.ID</td>
                <td>@x.Name</td>
                <td>@x.Price</td>
                <td>@x.Quantity</td>
                <td>@x.Description</td>
                <td><a style="margin-right:5px;" asp-controller="ShopItem" asp-action="Detail" asp-route-id="@x.ID" class="btn btn-info active" role="button" aria-pressed="true"><i class="fa fa-info"></i></a><a style="margin-right:5px;" asp-controller="ShopItem" asp-action="Edit" asp-route-id="@x.ID" class="btn btn-secondary active" role="button" aria-pressed="true"><i class="fa fa-edit"></i></a><a asp-controller="ShopItem" asp-action="Delete" asp-route-id="@x.ID" class="btn btn-danger" role="button" aria-pressed="true"> <i class="fa fa-trash"></i> </a></td>
            </tr>
        }
    </tbody>
</table>
