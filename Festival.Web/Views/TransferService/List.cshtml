@using FestivalWebApplication.ViewModels.TransferService;
@model List<FestivalWebApplication.ViewModels.TransferService.ListTransferServiceVM>
@{
    ViewData["Title"] = "Transfer Services";
}


<h1>Transfer Services</h1>
<div style="float:right; margin-bottom:10px;">
    <a asp-controller="TransferService" asp-action="New" class="btn btn-success btn-lg active addnew" role="button" aria-pressed="true">Add New   <i class="fa fa-plus"></i></a>
</div>
<table class="table table-striped table-hover text-center">
    <thead class="thead-dark zaglavlje">
        <tr>
            <th>#</th>
            <th>Vehicle Name</th>
            <th>Meeting point</th>
            <th>Available Seats</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{int broj = 0; }
        @foreach (ListTransferServiceVM x in Model)
        {
            broj++;
            <tr>
                <td>@broj</td>
                <td>@x.VehicleName</td>
                <td>@x.MeetingPoint</td>
                <td>@x.AvailableSeats</td>
                <td>@x.Date</td>
                <td>
                    <div class="btn-group">
                        <a style="margin-right:5px;" asp-controller="TransferService" asp-action="Detail" asp-route-id="@x.Id" class="btn btn-info active" role="button" aria-pressed="true">
                            <i class="fa fa-info mr-1"></i>
                            Detail
                        </a>
                        <a style="margin-right:5px;" asp-controller="TransferService" asp-action="Edit" asp-route-id="@x.Id" class="btn btn-secondary active" role="button" aria-pressed="true">
                            <i class="fa fa-edit"></i>
                            Edit
                        </a>
                        <a asp-controller="TransferService" asp-action="Delete" asp-route-id="@x.Id" class="btn btn-danger" role="button" aria-pressed="true">
                            <i class="fa fa-trash"></i>
                            Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
