@using FestivalWebApplication.ViewModels.Performer;
@model List<FestivalWebApplication.ViewModels.Performer.PerformersListVM>
@{
    ViewData["Title"] = "List";
}

<h1>Performer</h1>
<div style="float:right; margin-bottom:10px;">
    <a asp-controller="Performer" asp-action="New" class="btn btn-success btn-lg active" role="button" aria-pressed="true"><i class="fa fa-plus"></i></a>
</div>
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Performer</th>
            <th>Manager</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (PerformersListVM x in Model)
        {
            <tr>
                <td>@x.Number</td>
                <td>@x.PerformerName</td>
                <td>@x.ManagerName</td>
                <td><a style="margin-right:5px;" asp-controller="Performer" asp-action="Edit" asp-route-id="@x.PerformerID" class="btn btn-secondary active" role="button" aria-pressed="true"><i class="fa fa-edit"></i></a><a asp-controller="Performer" asp-action="Delete" asp-route-id="@x.PerformerID" class="btn btn-danger" role="button" aria-pressed="true"> <i class="fa fa-trash"></i> </a></td>
            </tr>

        }
    </tbody>
</table>
