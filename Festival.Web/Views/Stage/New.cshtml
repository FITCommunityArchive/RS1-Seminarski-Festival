@model FestivalWebApplication.ViewModels.Stage.NewStageVM;
@{
    ViewData["Title"] = "New";
}
<style>








    .container {
        padding: 0 !important;
    }

    main.pb-3 {
        padding-bottom: 0 !important;
    }
</style>


<div class="formDiv" style="background-color:#e2e2e2;">
    <form class="formMy" style="border:2px dotted #fafafa; background-color:#fafafa" action="SaveNew" method="post">
        <fieldset>
            <div class="form-group newRow">
                <label for="Name" class="newLabel">Name :</label>
                <div>
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group newRow">
                <label class="newLabel" for="Capacity">Capacity :</label>
                <div>
                    <input asp-for="Capacity" class="form-control col-4" />
                </div>
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>

            <div class="form-group newRow">
                <label class="newLabel" for="Sponsor">Sponsor :</label>

                <select asp-items="@Model.Sponsors" asp-for="SponsorID" class="form-control">
                    <option selected disabled>(Choose a sponsor)</option>
                </select>

            </div>
            <div class="clearfix"></div>

        </fieldset>

        <input type="submit" value="Add new stage" class="btn btn-lg btn-secondary submit" />
    </form>
</div>
