@model Festival.Web.ViewModels.Stage.DetailStageVM;
@{
    ViewData["Title"] = "Detail";
}


    <div class="formDiv" style="background-color:#e2e2e2;">
        <form class="formMy" style="border:2px dotted #fafafa; background-color:#fafafa" asp-controller="Stage" asp-action="Save" method="post">
            <fieldset>
                <input asp-for="Id" hidden />
                <div class="form-group newRow">
                    <label for="Name" class="newLabel">Name :</label>
                    <div>
                        <input asp-for="Name" class="form-control" readonly/>
                    </div>
                </div>

                <div class="form-group newRow">
                    <label class="newLabel" for="Capacity">Capacity :</label>
                    <div>
                        <input asp-for="Capacity" class="form-control" readonly/>
                    </div>
                </div> 
                <div class="form-group newRow">
                    <label class="newLabel" for="Capacity">Sponsor :</label>
                    <div>
                        <input asp-for="SponsorName" class="form-control" readonly/>
                    </div>
                </div>

                
                <div class="clearfix"></div>

            </fieldset>

            <div class="detailButtons">
                <a style="margin-right:5px;" asp-controller="Stage" asp-action="List" asp-route-id="@Model.Id" class="btn btn-info active" role="button" aria-pressed="true">
                    Back
                    <i class="fa fa-undo"></i>
                </a>
                <a style="margin-right:5px;" asp-controller="Stage" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary active" role="button" aria-pressed="true">
                    Edit
                    <i class="fa fa-edit"></i>
                </a>
                <a asp-controller="Stage" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger" role="button" aria-pressed="true">
                    Delete
                    <i class="fa fa-trash"></i>
                </a>
            </div>
        </form>
    </div>