@model FestivalWebApplication.ViewModels.Performance.EditPerformanceVM;
@{
    ViewData["Title"] = "Performance Edit";
}


<style>

    .container {
        padding: 0 !important;
    }

    main.pb-3 {
        padding-bottom: 0 !important;
    }
</style>

<div class="formDiv" style="background-color:#e2e2e2;">
    <form class="formMy" style="border:2px dotted #fafafa; background-color:#fafafa" asp-action="Save" enctype="multipart/form-data" method="post">
        <fieldset>
            <input asp-for="ID" hidden />
            <div class="form-group newRow">
                <label class="newLabel" for="Performer">Performer :</label>
                <div>
                    <select asp-items="@Model.Performers" asp-for="PerformerID" class="form-control col-6">
                    </select>
                </div>
            </div>

            <div class="form-group newRow">
                <label class="newLabel" for="Performer">Stage :</label>
                <div>
                    <select asp-items="@Model.Stages" asp-for="StageID" class="form-control col-6">
                    </select>
                </div>
            </div>

            <div class="form-group newRow">
                <label for="Start" class="newLabel">Start Date :</label>
                <div>
                    <input asp-for="Start" class="form-control col-6" />
                </div>
                <span asp-validation-for="Start" class="text-danger"></span>
            </div>


            <div class="clearfix"></div>
        </fieldset>

        <input type="submit" value="Save changes" class="btn btn-lg btn-secondary submit" />

    </form>
</div>
