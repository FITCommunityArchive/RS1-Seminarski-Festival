@using FestivalWebApplication.ViewModels.Performance;
@model List<FestivalWebApplication.ViewModels.Performance.PerformanceListVM>
@{
    ViewData["Title"] = "Performances";
}

<h1>Performance</h1>
<div style="float:right; margin-bottom:10px;">
    <a asp-controller="Performance" asp-action="New" class="btn btn-success btn-lg active" role="button" aria-pressed="true">Add New   <i class="fa fa-plus"></i></a>
</div>
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Performer</th>
            <th>Stage</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (PerformanceListVM x in Model)
        {
            <tr>
                <td>@x.PerformanceID</td>
                <td>@x.Performer</td>
                <td>@x.Stage</td>
                <td>@x.Start.ToString()</td>
                <td>
                    <a style="margin-right:5px;" asp-controller="Performance" asp-action="Detail" asp-route-id="@x.PerformanceID" class="btn btn-info active" role="button" aria-pressed="true">
                        <i class="fa fa-info mr-1"></i>
                        Detail
                    </a>
                    <a style="margin-right:5px;" asp-controller="Performance" asp-action="Edit" asp-route-id="@x.PerformanceID" class="btn btn-secondary active" role="button" aria-pressed="true">
                        <i class="fa fa-edit"></i>
                        Edit
                    </a>
                    <a asp-controller="Performance" asp-action="Delete" asp-route-id="@x.PerformanceID" class="btn btn-danger" role="button" aria-pressed="true">
                        <i class="fa fa-trash"></i>
                        Delete
                    </a>
                </td>
            </tr>

        }
    </tbody>
</table>
