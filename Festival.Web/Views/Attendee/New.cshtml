@model Festival.Web.ViewModels.Attendee.NewAttendeeVM;
@{
    ViewData["Title"] = "New Attendee";
}
<style>

    .container {
        padding: 0 !important;
    }

    main.pb-3 {
        padding-bottom: 0 !important;
    }
</style>

<div class="formDiv" style="background-color:#e2e2e2;">
    <form class="formMy" style="border:2px dotted #fafafa; background-color:#fafafa" asp-action="SaveNew" method="post">

        <fieldset>

            <div class="form-group newRow">
                <label for="FirstName" class="newLabel">First name :</label>
                <div>
                    <input asp-for="FirstName" class="form-control" />
                </div>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group newRow">
                <label for="LastName" class="newLabel">Last name :</label>
                <div>
                    <input asp-for="LastName" class="form-control" />
                </div>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group newRow">
                <label class="newLabel" for="Email" >Email :</label>
                <div>
                    <input asp-for="Email" class="form-control"/>
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>


            <div class="form-group newRow">
                <label class="newLabel" for="PhoneNumber">Phone number :</label>
                <div>
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            

            <div class="form-group newRow">
                <label class="newLabel" for="Username">Username :</label>
                <div>
                    <input asp-for="Username" class="form-control" />
                </div>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group newRow">
                <label class="newLabel" for="Password">Password :</label>
                <div>
                    <input asp-for="Password" type="password" class="form-control" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group newRow">
                <label class="newLabel" for="ConfirmPassword">Confirm password :</label>
                <div>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

        </fieldset>



        <input type="submit" value="Register" class="btn btn-lg btn-secondary submit ml-1" style="width:100%" />


    </form>
</div>
